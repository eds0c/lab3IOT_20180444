<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".activity.MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Nombre de la aplicación -->
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tele-Fútbol"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp" />

        <!-- Imagen relacionada con el deporte -->
        <ImageView
            android:id="@+id/img_sport"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/futbol_main" />

        <!-- Botón Ingresar -->
        <Button
            android:id="@+id/btn_ingresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:layout_marginTop="20dp" />

        <!-- Texto con nombre y código -->
        <TextView
            android:id="@+id/tv_elaborado_por"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Elaborado por: Eduardo Carbajal / 20180444"
            android:textSize="14sp"
            android:layout_marginTop="30dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>